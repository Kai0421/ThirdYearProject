<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="societyTimetable.SocietyTimetable">

    <LinearLayout
        android:id="@+id/day_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/day_textview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/heading_size"
            android:textAllCaps="true"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        >


    <TableLayout
        android:id="@+id/society_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/table_title_row"
            android:layout_height="@dimen/table_text_title"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/time_label"
                android:layout_height="@dimen/table_text_title_height"
                android:layout_width="@dimen/table_time_width"
                android:text="@string/time"

                android:textSize="@dimen/table_text_title"
                />

            <TextView
                android:id="@+id/society_label"
                android:layout_height="@dimen/table_text_title_height"
                android:layout_width="match_parent"
                android:text="@string/society"

                android:textSize="@dimen/table_text_title"
                />
        </TableRow>
     </TableLayout>

    </ScrollView>

</LinearLayout>
