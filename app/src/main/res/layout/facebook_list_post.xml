<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook_logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cit_facebook2" />

        <TextView
            android:id="@+id/facebook_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/facebook_dt_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:paddingBottom="10dp"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/link_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebook_dt_tv"
        android:layout_alignStart="@+id/facebook_dt_tv"
        android:layout_below="@+id/facebook_dt_tv"
        android:layout_marginRight="10dp"
        android:textColor="#7878F0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/facebook_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/link_tv"
        android:layout_alignStart="@+id/link_tv"
        android:layout_below="@+id/link_tv"
        android:layout_marginRight="10dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/post_image_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebook_message_tv"
        android:layout_alignStart="@+id/facebook_message_tv"
        android:layout_below="@+id/facebook_message_tv"
        android:paddingTop="10dp"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebook_message_tv"
        android:layout_alignStart="@+id/facebook_message_tv"
        android:layout_below="@+id/post_image_tv"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp">


        <ImageView
            android:id="@+id/like_btn_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/like_btn_ss" />

        <TextView
            android:id="@+id/like_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="7"
            android:textColor="#4772bc"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>


